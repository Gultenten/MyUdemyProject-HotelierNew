@model List<HotelProjectt.WebUI.Models.Role.RoleAssignViewModel>

@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Rol Atama Sayfası</h1>

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleID" />
            <br />
            <input type="hidden" asp-for="@Model[i].RoleName" />
            <br />
            <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
            <br />
            <label class="form-check-input" for="@Model[i].RoleExist">@Model[i].RoleName</label>
            <br />
            <br />
        </div>
        <br />
    }
    <button class="btn btn-success">Kullanıcı İçin Rolleri Güncelle </button>

</form>

